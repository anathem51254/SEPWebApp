@model PagedList.IPagedList<SEPBankingApp.Models.TransactionHistory>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "TransactionHistory";
}

<h2>TransactionHistory</h2>

<p>
    @Html.ActionLink("Make Transaction", "MakeTransaction")
</p>

@*@using (Html.BeginForm("TransactionHistory", "TransactionHistory", FormMethod.Get))
{
    <p>
