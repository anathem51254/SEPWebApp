    </p>
}*@

<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>*@
        <th>
            @Html.DisplayName("DestinationAccountNumber")
        </th>

        <th>
            @Html.DisplayName("TransactionAmount")
        </th>
        <th>
            @Html.DisplayName("TransactionDateTime")
        </th>
        <th>
            @Html.DisplayName("PreBalance")
        </th>
        <th>
            @Html.DisplayName("PostBalance")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.AccountNumber)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.DestinationAccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PreBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.TransactionId }) |
                        @Html.ActionLink("Details", "Details", new { id=item.TransactionId }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.TransactionId })
                    </td>*@
            </tr>
        }
    }
</table>
